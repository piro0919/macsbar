{
  "author": "piro <piro.haniwa@gmail.com> (https://kk-web.link/)",
  "bugs": {
    "url": "https://github.com/piro0919/macsbar/issues"
  },
  "build": {
    "appId": "com.example.macsbar",
    "asar": true,
    "extraResources": [
      {
        "from": "swift-bin/app_observer",
        "to": "swift-bin/app_observer"
      }
    ],
    "files": [
      "dist",
      "!dist/mac-arm64",
      "main",
      "index.html",
      "package.json",
      "!**/*.map",
      "!**/test/**",
      "!**/tests/**",
      "!**/*.md",
      "!**/example/**",
      "!node_modules/.cache"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "target": [
        "dir",
        "zip"
      ]
    },
    "productName": "Macsbar"
  },
  "dependencies": {
    "lodash.isequal": "4.5.0",
    "node-window-manager": "2.2.4",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "ress": "5.0.2"
  },
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "20.0.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/compat": "1.4.0",
    "@eslint/eslintrc": "^3",
    "@eslint/js": "9.36.0",
    "@secretlint/secretlint-rule-preset-recommend": "11.2.4",
    "@types/lodash.isequal": "4.5.8",
    "@types/node": "22.18.6",
    "@types/react": "19.1.14",
    "@types/react-dom": "19.1.9",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "@uphold/commitlint-config": "1.1.1",
    "@vitejs/plugin-react": "5.0.3",
    "concurrently": "9.2.1",
    "dotenv-cli": "10.0.0",
    "electron": "38.1.2",
    "electron-builder": "26.0.12",
    "eslint": "^9",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-css": "0.11.0",
    "eslint-plugin-css-modules": "2.12.0",
    "eslint-plugin-ext": "0.1.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-no-unsanitized": "4.1.4",
    "eslint-plugin-perfectionist": "4.15.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-unused-imports": "4.2.0",
    "eslint-plugin-write-good-comments": "0.2.0",
    "lefthook": "1.13.4",
    "prettier": "3.6.2",
    "secretlint": "11.2.4",
    "stylelint": "16.24.0",
    "stylelint-config-css-modules": "4.5.1",
    "stylelint-config-recommended": "17.0.0",
    "stylelint-css-modules-no-global-scoped-selector": "1.0.2",
    "stylelint-declaration-block-no-ignored-properties": "2.8.0",
    "stylelint-high-performance-animation": "1.11.0",
    "stylelint-no-unused-selectors": "1.0.40",
    "stylelint-order": "7.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "vite": "7.1.7",
    "wait-on": "9.0.1"
  },
  "keywords": [],
  "license": "ISC",
  "main": "dist/main/main.js",
  "name": "macsbar",
  "overrides": {
    "stylelint-css-modules-no-global-scoped-selector": {
      "stylelint": "16.24.0"
    },
    "stylelint-no-unused-selectors": {
      "stylelint": "16.24.0"
    }
  },
  "productName": "Macsbar",
  "repository": {
    "type": "git",
    "url": "https://github.com/piro0919/macsbar.git"
  },
  "scripts": {
    "build": "vite build --sourcemap false && npm run build-main && npm run generate-swift && electron-builder --publish never",
    "build-main": "tsc --project tsconfig.json",
    "codesign": "codesign --deep --force --sign - 'dist/mac-arm64/Macsbar.app'",
    "dev": "npm run start",
    "electron": "npm run generate-swift && npm run build-main && electron .",
    "generate-icon": "bash scripts/generate-icon.sh",
    "generate-swift": "bash scripts/generate-swift.sh",
    "lint": "npx eslint",
    "lint:fix": "npx eslint --fix",
    "lint:style": "stylelint --fix '**/*.css'",
    "patch-plist": "bash scripts/patch-plist.sh",
    "postbuild": "npm run patch-plist && npm run strip-bloat && npm run codesign && npm run zip && rm -f dist/*-arm64-mac.zip",
    "prebuild": "npm run generate-icon",
    "predev": "npm run generate-swift",
    "prettier": "prettier --write .",
    "release": "npm run release:create && npm run release:upload",
    "release:create": "gh release create v$npm_package_version -t \"Release v$npm_package_version\" --generate-notes",
    "release:upload": "gh release upload v$npm_package_version \"dist/Macsbar-$npm_package_version-mac.zip\" \"dist/latest-mac.yml\" --clobber",
    "start": "concurrently \"vite\" \"wait-on http://localhost:5173 && npm run electron\"",
    "strip-bloat": "bash scripts/strip-electron-bloat.sh",
    "type-check": "tsc --noEmit",
    "zip": "ditto -c -k --sequesterRsrc --keepParent \"dist/mac-arm64/Macsbar.app\" \"dist/Macsbar-${npm_package_version}-mac.zip\""
  },
  "version": "0.0.1"
}
